<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/int1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.esgi.ratp.SettingsActivity"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btBuildMyOwn"
        android:padding="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/man13"
        android:background="@null"
        android:text="Build my own excuse"
        android:textSize="25dp"
        android:textColor="@color/indigo" />

    <Button
        android:id="@+id/btRandom"
        android:padding="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:drawableBottom="@drawable/couple35"
        android:text="Random"
        android:textSize="25dp"
        android:textColor="@color/indigo" />


</LinearLayout>